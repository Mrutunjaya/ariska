<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/css/custom.css" rel="stylesheet" />
</head>
<body>
    @*@{
        Aeriksa.Models.ContentModel MenuModel = new Aeriksa.Models.ContentModel();
        MenuModel.type = ViewBag.type;
    }*@
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                <div style="margin-left:30px"><img src="~/Image/Aerika.jpg" /></div>
            </div>
            <div class="navbar-collapse collapse" style="border-color:#A6C9FF">
                <ul class="nav navbar-nav" style="margin-left:30px">
                    <li>@Html.ActionLink("Air Quality", "AirQuality", "Home")</li>
                    <li>@Html.ActionLink("Temperature", "About", "Home")</li>
                    <li>@Html.ActionLink("Humidity", "Contact", "Home")</li>
                    <li>@Html.ActionLink("CO2", "Contact", "Home")</li>
                    <li>@Html.ActionLink("VOC", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

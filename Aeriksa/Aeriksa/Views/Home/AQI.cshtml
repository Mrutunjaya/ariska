    <script type="text/javascript">
        var myDataRef = "https://incandescent-fire-5051.firebaseio.com/devices";
        var gpslocation = 'banaglore';
        var markers = [
            {
                "title": 'Bombay',
                "lat": '18.9409388',
                "lng": '72.82819189999998',
                "description": 'Bombay Hospital',
                "type": 'mumbai'
            },

                    {
                        "title": 'New Delhi',
                        "lat": '28.63050',
                        "lng": '77.13077',
                        "description": 'Phoenix Mall',
                        "type": 'delhi'
                    },
                    {
                        "title": 'Bangalore',
                        "lat": '12.97666',
                        "lng": '77.63543',
                        "description": 'Motifworks',
                        "type": 'banaglore'
                    },

        ];
        window.onload = function () {

            var mapOptions = {
                center: new google.maps.LatLng(markers[0].lat, markers[0].lng),
                zoom: 8,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };
            var infoWindow = new google.maps.InfoWindow();
            var latlngbounds = new google.maps.LatLngBounds();
            var map = new google.maps.Map(document.getElementById("dvMap"), mapOptions);
            var i = 0;
            var interval = setInterval(function () {
                var data = markers[i]
                var myLatlng = new google.maps.LatLng(data.lat, data.lng);

                var icon = "";

                

                switch (data.type) {
                    case "mumbai":
                        // icon = "red";
                        icon = "green";
                        break;
                    case "delhi":
                        icon = "red";
                        break;
                    case "Mall":
                        icon = "yellow";
                        break;
                    case "banaglore":
                        icon = "yellow";
                        break;
                }
                // icon = "http://maps.google.com/mapfiles/ms/icons/" + icon + ".png";
                icon = "../Image/" + icon + ".png";
                var marker = new google.maps.Marker({
                    position: myLatlng,
                    map: map,
                    title: data.title,
                    animation: google.maps.Animation.DROP,
                    icon: new google.maps.MarkerImage(icon)
                });
                (function (marker, data) {
                    google.maps.event.addListener(marker, "click", function (e) {
                        infoWindow.setContent(data.description);
                        infoWindow.open(map, marker);
                        // myDataRef = myDataRef + '/pdr_' + data.type + '_001';
                        gpslocation = data.type;
                        var Ref = new Firebase(myDataRef + '/pdr_' + data.type + '_001');
                        //Ref.on("child_added", function (snapshot) {
                        //    snapshot.forEach(function (data) {
                        //        $('#lblhumidity').text(data.val().humidity);
                        //        $('#lbltemp').text(data.val().pm10);
                        //    });
                        //});

                        Ref.on('child_added', function (snapshot) {
                            $('#lblhumidity').text(snapshot.val().humidity);
                            $('#lbltemp').text(snapshot.val().aqi);
                        });
                    });


                })(marker, data);
                latlngbounds.extend(marker.position);
                i++;
                if (i == markers.length) {
                    clearInterval(interval);
                    var bounds = new google.maps.LatLngBounds();
                    map.setCenter(latlngbounds.getCenter());
                    map.fitBounds(latlngbounds);
                }
            }, 80);
        }

        $(document).ready(function () {




            function displayChatMessage(humidity, pm10) {

                document.getElementById("messagesDiv").innerHTML = humidity;
                document.getElementById("messagesname").innerHTML = pm10;
            };




            var myDataRef = new Firebase("https://incandescent-fire-5051.firebaseio.com/devices");

            myDataRef.on("child_added", function (snapshot) {
                snapshot.forEach(function (data) {
                    displayChatMessage(data.val().humidity, data.val().pm10);
                });
            });

            $("#btnSend").click(function () {
                SendMessage();
            });


            $("li").click(function () {
                var idvalue = this.id;
                var yaxisvalue = 0;
                var data0 = [];
                var data1 = [];
                var data2 = [];
                var Ref = new Firebase(myDataRef + '/pdr_' + gpslocation + '_001');



                Ref.on("value", function (snapshot) {
                    snapshot.forEach(function (data) {


                        switch (idvalue) {
                            case "airquality":
                                yaxisvalue = data.val().pm10;
                                break;
                            case "temperature":
                                yaxisvalue = data.val().temp;
                                break;
                            case "humidity":
                                yaxisvalue = data.val().humidity;
                                break;
                            case "co2":
                                yaxisvalue = data.val().pm10;
                                break;
                            case "voc":
                                yaxisvalue = data.val().pm25;
                                break;
                        }

                        data0.push({ label: data.val().time, y: parseInt(yaxisvalue) });
                        data1.push({ label: data.val().time, y: parseInt(yaxisvalue) });
                        data2.push({ label: data.val().time, y: parseInt(yaxisvalue) });
                        var chart = new CanvasJS.Chart("chartContainer", {
                            animationEnabled: true,
                            theme: "theme2",//theme1
                            //title: {
                            //    text: "Temp/Humidity"
                            //},
                            data: [
                            {
                                // animationEnabled: false,
                                animationEnabled: true,
                                // Change type to "bar", "splineArea", "area", "spline", "pie",etc.
                                type: "spline",
                                color: "#00C0EF",
                                showInLegend: true,
                                name: "PM10",
                                dataPoints: data0,

                            },
                            {
                                // animationEnabled: window.requestAnimationFrame(10),
                                // Change type to "bar", "splineArea", "area", "spline", "pie",etc.
                                animationEnabled: true,

                                type: "spline",
                                color: "#DD4B39",
                                name: "PM2",
                                showInLegend: true,
                                dataPoints: data1
                            },
                            {
                                // animationEnabled: window.requestAnimationFrame(10),
                                // Change type to "bar", "splineArea", "area", "spline", "pie",etc.
                                animationEnabled: true,

                                type: "spline",
                                color: "#00A65A",
                                name: "CO2",
                                showInLegend: true,
                                dataPoints: data2
                            }

                            ]

                        });

                        chart.render();

                    });
                });

            });



        });





    </script>
